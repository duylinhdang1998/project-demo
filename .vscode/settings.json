{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.turbo": true,
    "**/.docusaurus": true,
    "**/node_modules": true
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.fixAll": true
  },
  "scss.scannerExclude": ["**/.git"],
  "eslint.workingDirectories": ["src"],
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
